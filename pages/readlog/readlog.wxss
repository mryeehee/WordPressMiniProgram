.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 108rpx 0 24rpx;
  border-radius: 50%;
}

.dec {
  margin-top: 50rpx;
}

.dec-text {
  font-size: 25rpx;
  color: #757575;
}

.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 32rpx 0;
  /* margin-top: 5rpx; */
}

.log-items {
  margin-top: 26rpx;
  text-overflow:ellipsis;
  overflow:hidden;

}

.log-text {
  margin: 32rpx 0;
  font-size: 30rpx;
  color: #757575;
  text-align: left;
  word-wrap:break-word;
  word-break:break-all; 
}

.top-bar {
   height: 100rpx; 
  background: #fff;
  width: 100%;
  /*position: fixed;*/
  top: 0;
  z-index: 1;
  /* margin-top: 200rpx;*/
}

.top-bar-item {
  display: inline-block;
  background: #fff;
  width: 25%;
  color: #9babba;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

.top-bar-item-Selected {
  border-bottom: 1px solid #495056;
  /* font-weight: bold; */
  color: #495056;
}
